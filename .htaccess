# Correct MIME type for JavaScript modules
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/javascript .js
AddType text/javascript .mjs

# Enable CORS for font files
<FilesMatch "\.(ttf|otf|eot|woff|woff2)$">
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# Serve files with correct encoding
AddDefaultCharset UTF-8

# Enable rewrite engine
RewriteEngine On
RewriteBase /AI-Design_Modifiers/

# If the request is not for a file that exists
RewriteCond %{REQUEST_FILENAME} !-f
# If the request is not for a directory that exists
RewriteCond %{REQUEST_FILENAME} !-d
# Rewrite all requests to index.html
RewriteRule ^ index.html [QSA,L]
